{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    "config:recommended",
    ":gitSignOff",
    "helpers:pinGitHubActionDigestsToSemver",
    ":automergeDigest",
    ":automergeStableNonMajor",
    ":combinePatchMinorReleases",
    ":configMigration",
    ":enablePreCommit",
    ":prConcurrentLimitNone",
    ":prHourlyLimitNone"
  ],
  enabledManagers: [
    "github-actions",
    "pre-commit",
    "pep621",
    "dockerfile",
  ],
  lockFileMaintenance: {
    enabled: true,
    automerge: true
  },
  schedule: [
    "every weekend"
  ],
  packageRules: [
    {
      matchManagers: [
        "github-actions"
      ],
      addLabels: [
        "github_actions"
      ],
      commitMessagePrefix: "⬆\uFE0F\uD83D\uDC68\u200D\uD83D\uDCBB",
    },
    {
      matchManagers: [
        "pre-commit"
      ],
      addLabels: [
        "pre-commit"
      ],
      commitMessagePrefix: "⬆\uFE0F\uD83E\uDE9D",
      versioning: "pep440"
    },
    {
      matchManagers: [
        "pep621"
      ],
      addLabels: [
        "dependencies",
        "python"
      ],
      commitMessagePrefix: "⬆\uFE0F\uD83D\uDC0D",
    },
    {
      matchManagers: [
        "dockerfile"
      ],
      addLabels: [
        "docker"
      ],
      commitMessagePrefix: "⬆\uD83D\uDC0B",
    },
    {
      description: "Group and automerge all patch updates",
      groupName: "patch versions",
      groupSlug: "all-patch",
      matchUpdateTypes: [
        "patch"
      ],
      automerge: true
    }
  ]
}
